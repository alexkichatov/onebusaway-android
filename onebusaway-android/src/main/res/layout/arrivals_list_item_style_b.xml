<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#eaeaea"
              android:paddingBottom="2dp"
              android:paddingTop="3dp"
              android:orientation="vertical">

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"/>

    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="2"
            android:background="#fff"
            android:shrinkColumns="1">
        <TableRow
                android:gravity="center_vertical"
                android:visibility="gone"
                android:background="#ffffff">

            <TextView
                    android:layout_column="0"
                    android:id="@+id/route"
                    android:layout_width="90sp"
                    android:gravity="center"
                    style="@style/StopInfoRoute"
                    android:textColor="#0078c1">
            </TextView>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_column="1"
                    android:gravity="left"
                    android:measureWithLargestChild="false">
                <TextView
                        android:id="@+id/trip_info"
                        android:drawableLeft="@drawable/ic_notification_list_icon"
                        android:visibility="gone"
                        style="@style/StopInfoDestination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">
                </TextView>
                <TextView
                        android:id="@+id/destination"
                        style="@style/StopInfoDestination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                </TextView>
                <TextView
                        android:id="@+id/time"
                        style="@style/StopInfoTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                </TextView>
                <TextView
                        android:id="@+id/status"
                        style="@style/StopInfoStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <TextView
                    android:layout_column="2"
                    android:id="@+id/eta"
                    style="@style/StopInfoEta"
                    android:maxLines="1"
                    android:gravity="right"
                    android:paddingRight="10sp">
            </TextView>
        </TableRow>

        <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:background="#ffffff"
                android:layout_marginBottom="1dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

            <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:stretchColumns="0">

                <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_width="0dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_weight="1">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="New Text"
                                style="@style/ArrivalsListItemRoute"
                                android:id="@+id/routeNew"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="New Text"
                                style="@style/ArrivalsListItemDestination"
                                android:id="@+id/destinationNew"/>
                    </LinearLayout>

                    <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/mapImageView"
                            android:src="@drawable/ic_arrivals_styleb_action_map"
                            android:background="@drawable/selectable_background_busbot"
                            android:contentDescription="@string/route_info_context_showonmap"
                            android:paddingLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_column="1"
                            android:clickable="false"/>

                    <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/infoImageView"
                            android:paddingLeft="12dp"
                            android:paddingRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_column="2"
                            android:src="@drawable/ic_action_info"
                            android:background="@drawable/selectable_background_busbot"
                            android:contentDescription="@string/stop_info_item_options_title"/>
                </TableRow>

                <TableRow
                        android:layout_width="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_height="wrap_content">

                    <RelativeLayout
                            style="@style/ArrivalsListLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Scheduled"
                                android:id="@+id/textView3"
                                style="@style/ArrivalsListLabelText"
                                android:layout_alignParentLeft="true"/>


                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Estimated Arrival"
                                android:id="@+id/textView4"
                                android:layout_span="2"
                                android:layout_alignParentRight="true"
                                style="@style/ArrivalsListLabelText"/>
                    </RelativeLayout>
                </TableRow>

                <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:focusable="false"
                        android:clickable="false">

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/ArrivalsListNextTime"
                            android:id="@+id/relativeLayout">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="New Text"
                                android:id="@+id/scheduledTime1"
                                style="@style/ArrivalsListNextTimeSched"
                                android:layout_alignParentLeft="true"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="New Text 123 123 123 21"
                                android:layout_span="2"
                                style="@style/ArrivalsListNextTimeETA"
                                android:layout_alignParentRight="true"
                                android:id="@+id/arrivalTime1"/>
                    </RelativeLayout>
                </TableRow>

                <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:focusable="false"
                        android:clickable="false"
                        android:id="@+id/arrivalRow2">

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/ArrivalsListTime"
                            android:id="@+id/relativeLayout2">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="New Text"
                                style="@style/ArrivalsListSched"
                                android:id="@+id/scheduledTime2"
                                android:layout_alignParentLeft="true"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="New Text 123 123 123 21"
                                android:layout_span="2"
                                style="@style/ArrivalsListETA"
                                android:layout_alignParentRight="true"
                                android:id="@+id/arrivalTime2"/>

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#ccc"/>

                    </RelativeLayout>
                </TableRow>

                <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:focusable="false"
                        android:clickable="false"
                        android:id="@+id/arrivalRow3">

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/ArrivalsListTime"
                            android:id="@+id/relativeLayout3">

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#ccc"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="New Text"
                                style="@style/ArrivalsListSched"
                                android:id="@+id/scheduledTime3"
                                android:layout_alignParentLeft="true"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="New Text 123 123 123 21"
                                android:id="@+id/arrivalTime3"
                                style="@style/ArrivalsListETA"
                                android:layout_span="2"
                                android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                </TableRow>

            </TableLayout>

        </TableRow>

    </TableLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"/>
</LinearLayout>