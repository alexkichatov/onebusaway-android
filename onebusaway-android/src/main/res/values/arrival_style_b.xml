<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Arrivals list styles -->
    <style name="ArrivalsListItemRoute">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/theme_primary</item>
    </style>
    <style name="ArrivalsListItemDestination">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="ArrivalsListLabel">
        <item name="android:background">@color/theme_primary</item>
        <item name="android:paddingRight">20dp</item>
    </style>
    <style name="ArrivalsListLabelText">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">2dp</item>
    </style>
    <style name="ArrivalsListNextTime">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="ArrivalsListNextTimeETA">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#777</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="ArrivalsListNextTimeSched">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000</item>
    </style>
    <style name="ArrivalsListTime">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="ArrivalsListSched">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
    </style>
    <style name="ArrivalsListETA">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#777</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
    </style>
</resources>